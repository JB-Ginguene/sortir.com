{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date</th>
                <th scope="col">Cloture</th>
                <th scope="col">Inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <th scope="row">{{ sortie.nom }}</th>
                    <td>{{ sortie.dateHeureDebut|date("m/d/Y H:i") }}</td>
                    <td>{{ sortie.dateLimiteInscription|date("m/d/Y") }}</td>
                    <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
                    {% if sortie.participants.contains(app.user) %}
                        {# Oui, l'utilisateur connecté est bien inscrit : #}
                        <td>X</td>
                    {% else %}
                        {# Non, l'ulisateur connecté n'est pas inscrit à cette sortie : #}
                        <td></td>
                    {% endif %}


                    <td>
                        {# TODO Ajouter lien vers détail du participant #}
                        {# <a href="{{ path('participant_detail', {'id' : sortie.organisateur.id}) }}" title="Détails de l'organisateur'"> #}
                        {{ sortie.organisateur.nom }}
                        {# </a> #}
                    </td>
                    <td><a href="{{ path('sortie_detail', {'id' : sortie.id}) }}"
                           title="Détails de la sortie">Détails </a>
                        {% if app.user %}
                            {% if app.user.id == sortie.organisateur.id %}
                                {# <a href="{{ path('sortie_create', {'id' : sortie.id}) }}" title="Modifier la sortie"> #}
                                Modifier
                                {# </a> #}
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <div>Pas de sorties pour le moment</div>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="container">
        <a href="{{ path('sortie_create') }}" class="btn btn-secondary btn-lg" role="button">Créer une sortie</a>
    </div>
{% endblock %}
